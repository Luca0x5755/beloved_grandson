# ===========================================
# RespiraAlly Dashboard 開發環境配置
# ===========================================

# 🎭 Mock 資料控制 (主要設定)
# true = 使用假資料，false = 連接真實 API
VITE_USE_MOCK_DATA=true

# 🌐 API 連線設定
VITE_API_BASE_URL=http://localhost:5000

# ⚡ Mock 資料效能調整
VITE_MOCK_DELAY_MIN=200
VITE_MOCK_DELAY_MAX=800

# 🛠️ 開發工具
VITE_DEV_MODE=true
VITE_DEBUG_API=true
VITE_DEBUG_MOCK=true

# 📱 前端伺服器設定
VITE_PORT=3000

# 🔐 安全設定 (開發用)
VITE_ENABLE_DEV_TOOLS=true
